@using Epam.Task06.DependencyResolver
@{
    if (IsPost)
    {
        var users = DependencyResolver.AuthUserLogic.GetAllAuthUsers();
        string name = null;
        string password = null;
        name = Request["Name"];
        password = Request["Password"];
        var isFoundUser = users.Where(item => item.Name == name && item.Password == password).Any();
        if (isFoundUser)
        {
            FormsAuthentication.SetAuthCookie(name, createPersistentCookie: true);
            Response.Redirect("~");
        }
        else
        {
            Response.Redirect("~");
        }
    }
}
